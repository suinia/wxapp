page{
  width: 100%;
  overflow: hidden;
}
.container {
  overflow: hidden;
  margin: 0 auto;
}
.swiper-container {
  height: 300rpx;
  display: flex;
}
.swiper-slide {
  position: relative;
  flex-shrink: 0;
}
.swiper-img {
  display: flex;
  flex: 1;
  width: 100%;
  height: 300rpx;
}